<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seat_background"
    android:orientation="vertical"
    tools:context=".presentation.seat.SeatSelectionActivity">

    <TextView
        android:id="@+id/seat_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:background="@color/seat_screen_background"
        android:paddingVertical="9dp"
        android:text="SCREEN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TableLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="84dp"
        android:background="@color/white"
        android:layout_marginHorizontal="34dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="A1" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="A2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="A3" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="A4" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="B1" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="B2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="B3" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="B4" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="C1" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="C2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="C3" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="C4" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="D1" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="D2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="D3" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="D4" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="E1" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="E2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="E3" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="E4" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_height="78dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="해리 포터와 마법사의 돌" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/seat_money_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="0원" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="88dp"
            android:height="78dp"
            android:background="@color/seat_confirm_background"
            android:gravity="center"
            android:text="확인"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
